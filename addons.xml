<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="metadata.movie.brazzers.com"
       name="Brazzers"
       version="1.4.3"
       provider-name="slashing">
  <requires>
    <import addon="xbmc.metadata" version="1.0"/>
    <import addon="metadata.common.themoviedb.org" version="1.0"/>
  </requires>
  <extension point="xbmc.metadata.scraper.movies"
             language="en"
             library="brazzers.xml"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Brazzer.com scraper</summary>
    <description lang="en">Download XXX scene information from brazzers.com</description>
    <platform>all</platform>
  </extension>
</addon>


<addon id="repository.slashing" name="Brazzers Addons" version="1.0.0" provider-name="slashing">
		<extension point="xbmc.addon.repository" name="Brazzers Addons">
			<info compressed="false">http://raw.github.com/slashing/kodi-brazzers/master/addons.xml</info>
			<checksum>http://raw.github.com/slashing/kodi-brazzers/master/addons.xml.md5</checksum>
			<datadir zip="true">http://raw.github.com/slashing/kodi-brazzers/master/zips</datadir>
		</extension>
		<extension point="xbmc.addon.metadata">
			<summary>install my addons</summary>
			<description>Download and Install addons</description>
			<platform>all</platform>
	</extension>
</addon>
</addons>
